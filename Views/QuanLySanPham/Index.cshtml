@model IEnumerable<Ecommerce.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    WebGrid webGrid = new WebGrid(source: Model, rowsPerPage: 10);
}

<section class="wrapper">
    @webGrid.GetHtml(
        tableStyle: "gridTable",
        headerStyle: "gridHead",
        footerStyle: "gridFooter",
        rowStyle: "gridRow",
        alternatingRowStyle: "gridAltRow",
        columns: webGrid.Columns(
            webGrid.Column("MaSP", "Mã"),
            webGrid.Column("TenSP", "Tên"),
            webGrid.Column("HinhAnh", "Hình Ảnh", format: p => Html.Raw("<img src = \"../Content/images/" + p.HinhAnh + "\" >")),
            webGrid.Column("DonGia", "Giá"),
            webGrid.Column("SoLuongTon", "Số Lượng")
        )
    )
    <style>
        .gridTable {
            border: 2px solid #808080;
            width: 100%;
        }


        .gridHead {
            background-color: green;
        }

            .gridHead > th > a {
                color: aliceblue
            }

        .gridFooter {
            font-weight: bold
        }

        .gridRow {
            border-bottom: 2px solid #808080;
        }
    </style>
    </section>
