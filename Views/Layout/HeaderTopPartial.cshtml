@using Ecommerce.Models
<div class="header-top">
    <div class="container">
        <div class="search" style=" height: 30px;  margin-top: 0px;
">
            @using(Html.BeginForm("LayTuKhoa", "TimKiem"))
            {
                <input type="text" name="TuKhoa" value="Tìm Kiếm" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Tìm kiếm';}">
                <input type="submit" value="Tìm Kiếm">
            }
        </div>
        <div class="header-left">

            <ul>
                @if (Session["TaiKhoan"] != null && Session["TaiKhoan"] != "")
                {
                    ThanhVien tv = (ThanhVien)Session["TaiKhoan"];
                    <li class="total" style="font-size:16;margin-right:12;color:aliceblue">Hi @tv.HoTen</li>
                    <li style="text-decoration: none; font-size :15; margin-right: -1.5em;color:aliceblue"> @Html.ActionLink("Đăng Xuất", "DangXuat", "Home")</li>
                }
                else
                {
                    <li><a id="btnDangnhap" class="lock" href="@Url.Action("DangNhap","Home")">Đăng nhập</a></li>
                    <li><a class="lock" href="@Url.Action("DangKy","Home")">Đăng Ký</a></li>
                }

            </ul>


            @*IconGioHangPartialView*@
            @Html.Action("IconGioHangPartial", "GioHang")


            <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>
